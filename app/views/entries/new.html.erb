<% provide :title, t(".title") %>
<h1><%= t ".create_entry" %></h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @entry do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="field">
        <%= f.text_field :title, placeholder: t(".enter_title"),
          class: "form-control" %>
        <%= f.text_field :description, placeholder: t(".enter_desc"),
          class: "form-control" %>
        <%= f.text_area :content, placeholder: t(".enter_content"),
          class: "form-control" %>
      </div>
      <%= f.submit t(".create"), class: "btn btn-primary" %>
      <span class="picture">
        <%= f.file_field :picture %>
      </span>
    <% end %>
  </div>
</div>
